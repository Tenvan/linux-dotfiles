#!/usr/bin/env zsh

. "$HOME/.scripts/defs"

# System Update
if [ $IS_ARCH_BASED = true ]; then
  $PACTOOL -Syyu $PAKKER_ALL
fi

if [ $IS_FEDORA_BASED = true ]; then
  sudo dnf update -y
  sudo grub2-mkconfig -o /boot/grub2/grub.cfg
fi

# Flatpak Update
flatpak update -v --noninteractive

# Zinit Self update
. "$HOME/.zinit/bin/zinit.zsh"
zinit self-update

# Zinit Plugin update
zinit update --parallel

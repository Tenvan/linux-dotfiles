#!/usr/bin/env bash

. ~/.scripts/sounds
. ~/.bin/audio-test

ponymix set-default --sink -d "$SINK_NEXT"

sound device-changed &
notify-send "Next Sound Card" "$CARD_NEXT"

VOL=$(amixer get Master | grep -Po "[0-9]+(?=%)" | tail -1)
MUTE=$(amixer get Master | grep -Po "\[off\]" | tail -1)

if  [[ "$MUTE" == "[off]" ]]; then
    tvolnoti-show -m
else
    tvolnoti-show $VOL
fi
